<div class="form-group row">
  <div class="form-group">
    <%= form_for(@vehicle_trip) do |f| %>
      <% if @vehicle_trip.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@vehicle_trip.errors.count, "error") %> prohibited this vehicle_trip from being saved:</h2>
    
          <ul>
          <% @vehicle_trip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group col-lg-6 col-md-6 col-sm-6">
        <%= f.label :vehicle_route_id %><br>
        <%= f.text_field :vehicle_route_id, class: "form-control" %>
      </div>
      <div class="form-group col-lg-6 col-md-6 col-sm-6">
        <%= f.label :service %><br>
        <%= f.text_field :service, class: "form-control" %>
      </div>
      <div class="form-group col-lg-6 col-md-6 col-sm-6">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-lg-6 col-md-6 col-sm-6">
        <%= f.label :direction %><br>
        <%= f.number_field :direction, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Update Vehicle Trip", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to 'Back', vehicle_trips_path %>
  </div>
</div>