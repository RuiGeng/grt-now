<h1>Manage All Vehicle Stops</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @vehicle_stops.any? %>
        <h3>Number of Stops: <%= @vehicle_stops.count %></h3>
        <ol class="stops">
          <%= render @vehicle_stops %>
        </ol>
        <%= will_paginate @vehicle_stops %>
      <% end %>
    </div>
  </div>
</div>
